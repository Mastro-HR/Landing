{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/assets/*": ["assets/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@/services/*": ["services/*"],
      "@/constants/*": ["constants/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}