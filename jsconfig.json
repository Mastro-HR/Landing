{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"]
    },

    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}